h1
  | zone#home
= t :hello
= form_tag zone_url(id: @zone.id), method: :get do
  = hidden_field_tag :id, @zone.id
  = text_field_tag :search, params[:search]
  = submit_tag t :search, class: "btn btn-primary"

= will_paginate @topics
- if !@top_topics.nil?
  - @top_topics.each do |topic|
    - if topic.valid?
      a href="#{topic_url(id: topic.id)}"
        = "#{topic.notes.size} #{topic.topic_detail}"
  
- if !@topics.nil?
  - @topics.each do |topic|
    - if topic.valid?
      p
        a href="/topic?id=#{topic.id}"
          = "#{topic.notes.size} #{topic.topic_detail}"
        | 
        a href = "/edit_topic?id=#{topic.id}"
          | edit
        a href="/delete_topic?id=#{topic.id}"
          | delete
        - if topic.is_top
          a href="#{cancle_top_topic_url(id: topic.id)}"
            | cancle top
        - else
          a href="#{set_top_topic_url(id: topic.id)}"
            | set top
= will_paginate @topics

= render 'form_topic'

